<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.tigetting.mapper.UserMapper">

    <!-- ✅ ResultMap: User + Role 매핑 -->
    <resultMap id="UserResultMap" type="com.ssafy.tigetting.user.entity.UserEntity">
        <!-- users.userid -->
        <id property="userId" column="userid"/>

        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="register" column="register"/>

        <!-- ✅ Role 객체 매핑 (roles.roleid, roles.name) -->
        <association property="role" javaType="com.ssafy.tigetting.user.entity.RoleEntity">
            <id property="roleId" column="roleid"/>
            <result property="name" column="role_name"/>
        </association>
    </resultMap>

    <!-- ✅ INSERT -->
    <insert id="save" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO users (
            email,
            password,
            name,
            phone,
            roleid,
            register
        )
        VALUES (
            #{email},
            #{password},
            #{name},
            #{phone},
            #{role.roleId},
            #{register}
        )
    </insert>

    <!-- ✅ UPDATE -->
    <update id="modify">
        UPDATE users
        SET
            name = #{name},
            phone = #{phone}
            <if test="password != null and password != ''">
                , password = #{password}
            </if>
        WHERE userid = #{userId}
    </update>

    <!-- ✅ 조회: ID -->
    <select id="findById" resultMap="UserResultMap">
        SELECT
            u.userid,
            u.email,
            u.password,
            u.name,
            u.phone,
            u.register,
            r.roleid,
            r.name AS role_name
        FROM users u
        JOIN roles r ON u.roleid = r.roleid
        WHERE u.userid = #{id}
    </select>

    <!-- ✅ 조회: EMAIL (로그인용) -->
    <select id="findByEmail" resultMap="UserResultMap">
        SELECT
            u.userid,
            u.email,
            u.password,
            u.name,
            u.phone,
            u.register,
            r.roleid,
            r.name AS role_name
        FROM users u
        JOIN roles r ON u.roleid = r.roleid
        WHERE u.email = #{email}
    </select>

    <!-- ✅ 존재 여부 -->
    <select id="existsByEmail" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM users
        WHERE email = #{email}
    </select>

</mapper>
