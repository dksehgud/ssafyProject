<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.tigetting.mapper.SeatLockMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="lockId">
        INSERT INTO seat_locks (seat_id, user_id, session_id, locked_at, expires_at, status, created_at)
        VALUES (#{seat.seatId}, #{user.userId}, #{sessionId}, #{lockedAt}, #{expiresAt}, #{status}, #{createdAt})
    </insert>

    <update id="update">
        UPDATE seat_locks
        SET status = #{status},
            expires_at = #{expiresAt}
        WHERE lock_id = #{lockId}
    </update>

    <select id="findById" resultMap="SeatLockResultMap">
        SELECT * FROM seat_locks WHERE lock_id = #{id}
    </select>

    <select id="findBySeatId" resultMap="SeatLockResultMap">
        SELECT * FROM seat_locks WHERE seat_id = #{seatId}
    </select>

    <delete id="deleteById">
        DELETE FROM seat_locks WHERE lock_id = #{id}
    </delete>

    <resultMap id="SeatLockResultMap" type="SeatLock">
        <id property="lockId" column="lock_id"/>
        <result property="sessionId" column="session_id"/>
        <result property="lockedAt" column="locked_at"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <association property="seat" column="seat_id" select="com.ssafy.tigetting.mapper.ScheduleSeatMapper.findById"/>
        <association property="user" column="user_id" select="com.ssafy.tigetting.mapper.UserMapper.findById"/>
    </resultMap>

</mapper>
